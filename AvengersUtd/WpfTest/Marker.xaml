<UserControl x:Class="WpfTest.Marker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="8" Height="8">
    <Rectangle Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Width)}"
               Height="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Height)}" 
               Stroke="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Stroke)}" 
               Fill="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Fill)}"
               StrokeThickness="4"
               x:Name="Rectangle"/>
</UserControl>
