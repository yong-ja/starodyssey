<UserControl x:Class="WpfTest.Dot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Path x:Name="Path" Fill="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(Fill)}"
          Stroke="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(Stroke)}"
          StrokeThickness="4">
        <Path.Data>
            <EllipseGeometry x:Name="ellipseGeo" 
                             RadiusX="8" 
                             RadiusY="8" />
        </Path.Data>
    </Path>
</UserControl>
