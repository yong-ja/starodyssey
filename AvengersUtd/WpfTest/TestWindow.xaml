<s:SurfaceWindow x:Class="WpfTest.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="AvengersUtd.StarOdyssey"
    >
  <Canvas Background="DarkGray">
        <Ellipse x:Name="SourceCircle" Width="92" Height="92" Fill="Red"/>
        <Rectangle x:Name="SourceSquare" Width="92" Height="92" Fill="Blue" />
        <Ellipse x:Name="TargetCircle" Width="92" Height="92" Fill="Transparent" Stroke="Black" StrokeThickness="4"/>
        <Rectangle x:Name="TargetSquare" Width="92" Height="92" Fill="Transparent" Stroke="Black" StrokeThickness="4" />
        <Border x:Name="bCopy" Width ="256" Height="64" Canvas.Left="800" Canvas.Top="16" 
                Background="LightGray" BorderBrush="Gray" BorderThickness="1">
            <TextBlock FontSize="32" Text="Copy" HorizontalAlignment="Center" Foreground="Black"/>
        </Border>
    </Canvas>
</s:SurfaceWindow>
