<s:SurfaceWindow x:Class="WpfTest.SplineWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
                 xmlns:spline="clr-namespace:WpfTest"
        Title="SplineTask" Height="600" Width="800">
<DockPanel Background="DarkGray" LastChildFill="True">
        <StatusBar Height="32" DockPanel.Dock="Bottom" Padding="2">
            <TextBlock x:Name="Status" FontSize="14" Text="Test"/>
        </StatusBar>
        <Canvas  x:Name="Canvas">
            <Button x:Name="bConnect" Canvas.Left="1792" Canvas.Top="8" Content="Connect" 
                             Width="128" Height="32" 
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
            <Button x:Name="bStart" Canvas.Left="1792" Canvas.Top="56" Content="Start" 
                             Width="128" Height="32" 
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

            <spline:CanonicalSpline x:Name="UserCurve"  Stroke="Red" StrokeThickness="6" Points="50 75 300 500 400 200 600 500 750 75" Tension="1"/>
        </Canvas>
    </DockPanel>
</s:SurfaceWindow>
